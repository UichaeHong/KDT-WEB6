  <body>
    <div class="chat">
      <h1>채팅</h1>

      <!-- [실습3-2] 채팅창 입장 안내 문구 socket.id -> nickname  -->
      <div class="entry-box">
        <input
          type="text"
          id="nickname"
          placeholder="Nickname"
          autofocus
          onkeyup="enter()"
        />
        <button type="button" onclick="entry();">입장</button>
      </div>

      <div class="chat-box d-none">
        <div id="chat-list" class="chat-list">
          <button
            type="button"
            id="modal"
            onclick="green();"
            ondblclick="white()"
          >
            <i class="fa-solid fa-bars"></i>
          </button>
          <!--  임시 대화 데이터 -->
          <!-- <div class="my-chat">
        <div>user1: msg1</div>
      </div>
      <div class="other-chat">
        <div>user2: msg2</div>
      </div> -->
        </div>
        <div class="nick">
          <select id="nick-list"></select>
          <input
            type="text"
            id="message"
            onkeypress="enterkey(event)"
            required
          />
          <!-- onkeypress="show_name(event)"  -->
          <button type="button" id="click" onclick="send();">전송</button>
          <!-- <button type="button" id="modal" onclick="modal()">
            <i class="fa-solid fa-bars"></i>
          </button> -->
        </div>
      </div>
    </div>

